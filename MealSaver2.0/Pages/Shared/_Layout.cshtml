<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MealSaver</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MealSaver.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm primary-color border-bottom box-shadow fixed">
        <div class="container">
            <a class="navbar-brand text-white" asp-page="/Index" ><img src="~/img/Icon.png"/>MEAL SAVER</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    @if (User.IsInRole("Administrator"))
                    {
                    <li class="nav-item mx-2">
                        <a class="nav-link text-white" href="/MealPackage/MealPackages.cshtml">Inventaris</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link text-white" asp-action="Logout" asp-controller="Account">Logout</a>
                    </li>
                    }
                    else
                    {
                        <li class="nav-item mx-2">
                            <a class="nav-link text-white" asp-page="/MealPackage/MealPackages">Meals</a>
                        </li>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-page="/Account/AccountDetails">Account</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer secondary-color">
    <div class="container text-white">
        &copy; 2024 - MealSaver - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
