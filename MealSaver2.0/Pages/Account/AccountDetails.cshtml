@page
@model MealSaver2._0.Pages.Account.AccountDetailsModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header primary-color text-white">
                    <h4>Account Details</h4>
                </div>
                <div class="card-body">
                    @if (Model.Student != null)
                    {
                        <div class="form-group mb-3">
                            <label for="name" class="form-label">Name:</label>
                            <input type="text" id="name" class="form-control" value="@Model.Student.Name" readonly>
                        </div>

                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" id="email" class="form-control" value="@Model.Student.Email" readonly>
                        </div>

                        <div class="form-group mb-3">
                            <label for="studentNumber" class="form-label">Student Number:</label>
                            <input type="text" id="studentNumber" class="form-control" value="@Model.Student.StudentNumber" readonly>
                        </div>

                        <div class="form-group mb-3">
                            <label for="birthDate" class="form-label">Birth Date:</label>
                            <input type="text" id="birthDate" class="form-control" value="@Model.Student.BirthDate.ToString("yyyy-MM-dd")" readonly>
                        </div>

                        <div class="form-group mb-3">
                            <label for="city" class="form-label">City:</label>
                            <input type="text" id="city" class="form-control" value="@Model.Student.City" readonly>
                        </div>

                        <div class="form-group mb-3">
                            <label for="phoneNumber" class="form-label">Phone Number:</label>
                            <input type="text" id="phoneNumber" class="form-control" value="@Model.Student.PhoneNumber" readonly>
                        </div>

                    }else if (Model.CanteenEmployee != null)
                    {
                        <div class="form-group mb-3">
                            <label for="name" class="form-label">Name:</label>
                            <input type="text" id="name" class="form-control" value="@Model.CanteenEmployee.Name" readonly>
                        </div>

                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" id="email" class="form-control" value="@Model.CanteenEmployee.Email" readonly>
                        </div>

                        <div class="form-group mb-3">
                            <label for="studentNumber" class="form-label">Employee Number:</label>
                            <input type="text" id="studentNumber" class="form-control" value="@Model.CanteenEmployee.EmployeeNumber" readonly>
                        </div>

                        <div class="form-group mb-3">
                            <label for="city" class="form-label">City:</label>
                            <input type="text" id="city" class="form-control" value="@Model.CanteenEmployee.Canteen.City" readonly>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="city" class="form-label">Location:</label>
                            <input type="text" id="city" class="form-control" value="@Model.CanteenEmployee.Canteen.Location" readonly>
                        </div>
                    }
                    
                    <div class="d-flex justify-content-between mt-4">
                        @if (Model.Student != null)
                        {
                            <a asp-page="/Account/ReservedMealPackages" class="btn secondary-color text-white">My meal packages</a>
                        }

                        <form method="post">
                            <button type="submit" asp-page-handler="logout" class="btn secondary-color text-white">Log Out</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

